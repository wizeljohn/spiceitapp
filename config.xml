<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.gcccs.spiceeatapp"  version = "1.0.0">

	<name>Spice it App</name>
    <description>A mobile application</description>
    <author>Team Baynari</author>
	
	<gap:platforms>
		<gap:platform name="android" />
	</gap:platforms>
	<content src="index.html" />
    	<preference name="permissions" value="none" />
	<preference name="phonegap-version" value="3.7.0" />
	<preference name="fullscreen" value="true" />
	<preference name="android-minSdkVersion" value="14" />
	<icon src="images/download.jpg" />
	
<icon src="images/download.png" gap:platform="android" gap:qualifier="ldpi" />
	
<icon src="images/download.png" gap:platform="android" gap:qualifier="mdpi" />
	
<icon src="images/download.png" gap:platform="android" gap:qualifier="hdpi" />
	
<icon src="images/download.png" gap:platform="android" gap:qualifier="xhdpi" />

	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<access origin="*" subdomains="true" />
	<access uri="*" subdomains="true" />
	
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	<gap:plugin name="com.sharinglabs.cordova.plugin.datepicker" version="1.1.3" />
	<gap:plugin name="org.apache.cordova.camera" />
	<gap:plugin name="org.apache.cordova.media" />
	<gap:plugin name="org.apache.cordova.media-capture" />
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.9.0">
        <param name="APP_ID" value="1060631274001661" />
        <param name="APP_NAME" value="SpiceEatApp" />
   </gap:plugin>
	
<preference name="SplashScreen" value="image/splash.png" /> <!-- defaults to "img/logo.png" -->
<gap:splash gap:platform="android" gap:qualifier="port-ldpi" src="image/logo.png" />
<gap:splash gap:platform="android" gap:qualifier="port-mdpi" src="image/logo.png" />
<gap:splash gap:platform="android" gap:qualifier="port-hdpi" src="image/logoxx.png" />
<gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="image/logoxx.png" />
<preference name="SplashScreenBackground" value="image/wood.png" /> <!-- defaults to "#464646" -->
	
<preference name="SplashScreenDelay" value="3000" />

</widget>
